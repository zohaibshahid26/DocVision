<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Existing content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_border"
        android:padding="30dp"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <!-- Top Image -->
        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cro"
            android:layout_marginBottom="16dp" />

        <!-- First Call Logo and Number -->
        <LinearLayout
            android:id="@+id/call_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:background="@drawable/rounded_gradient"
            android:backgroundTint="@android:color/holo_red_light"

            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/call_logo_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:tint="@android:color/white"
                android:src="@drawable/telephone" />

            <TextView
                android:id="@+id/number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_1"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@android:color/white"
            android:elevation="2dp"
            android:background="@drawable/rounded_gradient"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/call_logo_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/telephone" />

            <TextView
                android:id="@+id/number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_2"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Text Line -->
        <TextView
            android:id="@+id/dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"

            android:text="Available 24/7 for your convenience"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:clickable="true"
        android:focusable="true"/>

</FrameLayout>
