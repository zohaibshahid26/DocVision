<!-- res/drawable/circle_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <corners android:radius="300dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
            <gradient
                android:angle="270"
                android:startColor="#80000000"
                android:endColor="#00000000"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Circle Background -->
    <item android:drawable="@drawable/circle_inner_background"/>
</layer-list>
