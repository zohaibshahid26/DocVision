
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for the calendar -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- White border color -->
        </shape>
    </item>

    <!-- Calendar grid -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="24dp"
                android:height="24dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- White grid lines -->
        </shape>
    </item>

    <!-- Vertical lines -->
    <item android:right="2dp">
        <shape android:shape="rectangle">
            <size
                android:width="2dp"
                android:height="24dp"/>
            <solid android:color="#FFFFFF"/> <!-- White vertical lines -->
        </shape>
    </item>

    <!-- Horizontal lines -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <size
                android:width="24dp"
                android:height="2dp"/>
            <solid android:color="#FFFFFF"/> <!-- White horizontal lines -->
        </shape>
    </item>

    <!-- Top lines (for header) -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <size
                android:width="24dp"
                android:height="4dp"/>
            <solid android:color="#FFFFFF"/> <!-- White top lines -->
        </shape>
    </item>

</layer-list>
